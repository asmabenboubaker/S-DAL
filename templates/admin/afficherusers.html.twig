
                {% extends 'base-back.html.twig' %}

{% block body %}


    <h1 class="card-title mb-0" >Liste des Utilisateurs</h1>

<div class="main-content app-content mt-0">
                <div class="side-app">
<div class="main-header-center ms-3 d-none d-lg-block">
                            <input  type="text" class="form-control" id="myInput"  placeholder="Search for results...">
                            <button class="btn px-0 pt-2"><i class="fe fe-search" aria-hidden="true"></i></button>
                        </div>
  

    



    <br><br>
    <table class="table table-bordered" id="t"  width="100%" cellspacing="0">
        <thead>
        <tr>
            <th> Action</th>
          
            <th>id  </th>
            <th>nom </th>
            <th>prenom </th>
            <th>login</th>
          
            <th> email</th>
            <th>genre</th>
             
        </tr> </thead> <tbody id="myTable">
        {% for i in tableusers %}
            <tr>
                <td> <a href="{{ path('modifieruser',{'id': i.id}) }}" class="btn text-primary btn-sm"
                                                                                            data-bs-toggle="tooltip"
                                                                                            data-bs-original-title="Edit"><span
                                                                                                class="fe fe-edit fs-14"></span></a>
                                                                                        <a href="{{ path('supprimeruser',{'id': i.id}) }}" class="btn text-danger btn-sm"
                                                                                            data-bs-toggle="tooltip"
                                                                                            data-bs-original-title="Delete"><span
                                                                                                class="fe fe-trash-2 fs-14"></span></a></td>

                <td>{{ i.id  }}</td>
                <td>{{ i.nom }}</td>
                <td>{{ i.prenom  }}</td>
                <td>{{ i.login  }}</td>
                 
                <td>{{ i.email }}</td>
                <td>{{ i.genre }}</td>
                

                



            </tr>

        {% endfor %}


        </tbody>
        <tbody id="search">
        </tbody>

    </table>
    <button class="btn btn-success btn-icon-split" ><a href="{{ path('ajouterUtilisateur')  }}"><span class="text" style="color: white">Ajouter </span></a></button>
    </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>


{% endblock %}